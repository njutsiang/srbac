<!DOCTYPE html>
<html lang="zh-CN">
<head>
{{template "head" .}}
</head>
<body>
{{template "header" .}}
<main>
    {{template "menu" .}}
    <div class="main-container">
        <div class="main-header">
            <div class="main-title">{{.title}}</div>
            <div class="main-path">
                <a href="/admin">首页</a>
                <i class="bi-chevron-right"></i>
                <a href="/admin/user/list">用户管理</a>
                <i class="bi-chevron-right"></i>
                <span>{{.title}}</span>
            </div>
        </div>
        <div class="main-content box-shadow">
            <div class="main-top">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/user-role/list?userId={{.user.Id}}">角色</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/user-service/list?userId={{.user.Id}}">补充权限</a>
                    </li>
                </ul>
                <a type="button" class="btn btn-primary main-top-btn" href="/admin/user-service/edit?userId={{.user.Id}}">分配服务</a>
            </div>
            <div class="table-container">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col" style="width: 80px; min-width: 80px;">ID</th>
                            <th scope="col">服务标识</th>
                            <th scope="col">服务名称</th>
                            <th scope="col" style="width: 220px; min-width: 220px;">创建时间</th>
                            <th scope="col" style="width: 80px; min-width: 80px;">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{range .userServices}}
                        <tr>
                            <td>{{.Id}}</td>
                            <td>{{.GetService.Key}}</td>
                            <td>{{.GetService.Name}}</td>
                            <td>{{.GetCreatedAt}}</td>
                            <td>
                                <a class="btn btn-sm btn-outline-danger no-border {{if InSlice .ServiceId $.roleServiceIds}}disabled{{end}}" href="/admin/user-service/delete?id={{.Id}}&userId={{.UserId}}">取消</a>
                            </td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
                <ul class="pagination">
                    {{.pager}}
                </ul>
            </div>
        </div>
    </div>
</main>
{{template "footer" .}}
</body>
</html>