<!DOCTYPE html>
<html lang="zh-CN">
<head>
{{template "head" .}}
</head>
<body>
{{template "header" .}}
<main>
    {{template "menu" .}}
    <div class="main-container">
        <div class="main-header">
            <div class="main-title">{{.title}}</div>
            <div class="main-path">
                <a href="/admin">首页</a>
                <i class="bi-chevron-right"></i>
                <a href="/admin/role/list">角色管理</a>
                <i class="bi-chevron-right"></i>
                <span>{{.title}}</span>
            </div>
        </div>
        <div class="main-content box-shadow">
            <div class="main-top">
                <div class="main-top-left"></div>
                <div class="main-top-right">
                    <a type="button" class="btn btn-primary" href="/admin/role/add">添加</a>
                </div>
            </div>
            <div class="table-container">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col" style="width: 80px; min-width: 80px;">ID</th>
                            <th scope="col" style="min-width: 200px;">角色标识</th>
                            <th scope="col" style="min-width: 200px;">角色名称</th>
                            <th scope="col" style="width: 220px; min-width: 220px;">创建时间</th>
                            <th scope="col" style="width: 130px; min-width: 130px;">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{range .roles}}
                        <tr>
                            <td>{{.Id}}</td>
                            <td>{{.Key}}</td>
                            <td>{{.Name}}</td>
                            <td>{{.GetCreatedAt}}</td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary no-border" href="/admin/role/edit?id={{.Id}}">编辑</a>
                                <a class="btn btn-sm btn-outline-danger no-border" href="/admin/role/delete?id={{.Id}}">删除</a>
                            </td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
                <ul class="pagination">
                    {{.pager}}
                </ul>
            </div>
        </div>
    </div>
</main>
{{template "footer" .}}
</body>
</html>