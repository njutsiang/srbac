<!DOCTYPE html>
<html lang="zh-CN">
<head>
{{template "head" .}}
</head>
<body>
{{template "header" .}}
<main>
    {{template "menu" .}}
    <div class="main-container">
        <div class="main-header">
            <div class="main-title">{{.title}}</div>
            <div class="main-path">
                <a href="/admin">首页</a>
                <i class="bi-chevron-right"></i>
                <a href="/admin/data-item/list">数据节点管理</a>
                <i class="bi-chevron-right"></i>
                <span>{{.title}}</span>
            </div>
        </div>
        <div class="main-content box-shadow">
            <div class="main-top">
                <div class="main-top-left">
                    <form class="main-auto-search-form" method="get">
                        <input type="hidden" name="{{.csrfTokenKey}}" value="{{.csrfTokenValue}}" >
                        <select name="serviceId" class="form-select" style="width:220px;">
                            <option value="">-所有-</option>
                            {{range .serviceIds}}
                                <option value="{{.Key}}" {{if eq .Key $.serviceId}}selected="selected"{{end}}>{{.Value}}</option>
                            {{end}}
                        </select>
                    </form>
                </div>
                <div class="main-top-right">
                    <a type="button" class="btn btn-primary" href="/admin/data-item/add">添加</a>
                </div>
            </div>
            <div class="table-container">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col" style="width: 80px; min-width: 80px;">ID</th>
                            <th scope="col" style="min-width: 100px;">权限标识</th>
                            <th scope="col" style="min-width: 100px;">权限名称</th>
                            <th scope="col" style="min-width: 100px;">所属服务</th>
                            <th scope="col" style="width: 220px; min-width: 220px;">创建时间</th>
                            <th scope="col" style="width: 130px; min-width: 130px;">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{range .dataItems}}
                        <tr>
                            <td>{{.Id}}</td>
                            <td>{{.Key}}</td>
                            <td>{{.Name}}</td>
                            <td>{{.GetServiceName}}</td>
                            <td>{{.GetCreatedAt}}</td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary no-border" href="/admin/data-item/edit?id={{.Id}}">编辑</a>
                                <form class="delete-form" method="post" action="/admin/data-item/delete">
                                    <input type="hidden" name="{{$.csrfTokenKey}}" value="{{$.csrfTokenValue}}" >
                                    <input type="hidden" name="id" value="{{.Id}}">
                                    <a class="btn btn-sm btn-outline-danger no-border" href="javascript:void(0);">删除</a>
                                </form>
                            </td>
                        </tr>
                        {{end}}
                    </tbody>
                </table>
                {{if not .dataItems}}
                    <div class="no-data">
                        <div class="no-data-icon"><i class="bi-file-earmark-x"></i></div>
                        <div class="no-data-text">暂无数据</div>
                    </div>
                {{end}}
                <ul class="pagination">
                    {{.pager}}
                </ul>
            </div>
        </div>
    </div>
</main>
{{template "footer" .}}
</body>
</html>